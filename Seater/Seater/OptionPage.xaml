<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seater.OptionPage"
             BackgroundColor="White"
             Title="Option">
    <ContentPage.Content>
        <StackLayout Margin="10,20,10,0">
            <Image Source="sushi.png" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Sushi King &#10;This restaurant is located at 123 Java Ave, Albany, NY. &#10;It provides great sushi!"
                           VerticalOptions="Start" HorizontalOptions="StartAndExpand" FontSize="Medium" TextColor="Black">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="CarterOne.ttf#CarterOne" ></On>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <Button Text="I need a table now!" Style="{StaticResource buttonStyle}" Clicked="now_Button_Clicked" VerticalOptions="StartAndExpand"/>
            <Button Text="Make a future reservation!" Style="{StaticResource buttonStyle}" Clicked="future_Button_Clicked" VerticalOptions="StartAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>