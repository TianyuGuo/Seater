<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seater.SignUpPage"
             Title="Sign Up">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,20,10,0">
                <Label Text="Account" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
                <Entry/>
                <Label Text="Password" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
                <Label Text="Name" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
                <Label Text="PhoneNumber:" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
                <Label Text="Address" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
                <Label Text="Security Question" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
            <Button Text="Create an account" Clicked="signup_Button_Clicked" Style="{StaticResource buttonStyle}"/>
          
            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>