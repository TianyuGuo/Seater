<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seater.ReservationPage2"
             Title="Your Reservation Information">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout  Margin="10,20,10,0">

                <Label Text="Your reservation has been cancelled! &#10;Thank you!"
                           VerticalOptions="Start" HorizontalOptions="CenterAndExpand" FontSize="Medium" TextColor="Black">
                    <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="CarterOne.ttf#CarterOne" ></On>
                        </OnPlatform>
                    </Label.FontFamily>
                </Label>
                <Button Text="Search more restaurant" Style="{StaticResource buttonStyle}" Clicked="Button_Clicked" VerticalOptions="StartAndExpand"/>

            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>