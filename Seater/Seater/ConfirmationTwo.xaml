<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Seater.ConfirmationTwo">
    <ContentPage.Content>
        
        
         <ScrollView>
            <StackLayout Margin="10,10,10,0">
           <Image VerticalOptions="Start" HorizontalOptions="Center" Source="CheckMark.jpg" WidthRequest="10" HeightRequest="100"/>

                <Label Text="You made a reservation successully! &#10;Name: Erick Salas &#10;Phone #: 800-123-4567 &#10;Occasion: Birthday Party! &#10;Date: January 1, 2018 &#10;Special Note: No Vanilla Cake"
                           VerticalOptions="Start" HorizontalOptions="CenterAndExpand" FontSize="Medium" TextColor="Black">
                    <Label.FontFamily>
                        <OnPlatform x:TypeArguments="x:String">
                            <On Platform="Android" Value="CarterOne.ttf#CarterOne" ></On>
                        </OnPlatform>
                    </Label.FontFamily>
                </Label>



                <Button Text="Continue" Clicked="Button_Clicked" Style="{StaticResource buttonStyle}" />
            
            
                
                
                
            </StackLayout>      
        </ScrollView>
        
        
        
        
        
    </ContentPage.Content>
</ContentPage>
