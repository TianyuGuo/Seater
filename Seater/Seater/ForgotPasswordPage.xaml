<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seater.ForgotPasswordPage"
             Title="Reset the Password"
             BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="10,20,10,0">
            <Label Text="Account" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
            <Label Text="PhoneNumber" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
            <Label Text="Security Question:" Style="Italic" FontSize="Medium"  VerticalOptions="Start" HorizontalOptions="Start"/>
            <Entry/>
            <Button Text="Send Temporary Password To My Phone" Style="{StaticResource buttonStyle}" Clicked="Button_Clicked"/>
            </StackLayout>
         </ScrollView>
    </ContentPage.Content>
</ContentPage>