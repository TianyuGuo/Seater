<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="White"
             x:Class="Seater.ConfirmationPage">
    <ContentPage.Content>



        <StackLayout Margin="10,10,10,0">
           <Image Source="CheckMark.jpg" WidthRequest="10" HeightRequest="100" Grid.Row="0" Grid.Column="0"/>
            
                
    
            <Label Text="You made a reservation successully! &#10;Your waiting number is 11 &#10;Estimated waiting time: 40 Minutes! &#10;You will recieve an alert when your number is called!"
                           VerticalOptions="Start" HorizontalOptions="CenterAndExpand" FontSize="Medium" TextColor="Black">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="CarterOne.ttf#CarterOne" ></On>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
            <Button Text="Continue" Clicked="Button_Clicked" Style="{StaticResource buttonStyle}"/>
            
            
                
                
                
            </StackLayout>      
     
        
        
        
        
        
    </ContentPage.Content>
</ContentPage>
