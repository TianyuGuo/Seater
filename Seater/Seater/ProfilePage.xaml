<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seater.ProfilePage"
             Title="Profile"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10,20,10,0">
                <Label Text="Name:" VerticalOptions="Start"/>
                <Label Text="Phone#:" VerticalOptions="Start"/>
                <Label Text="Address:" VerticalOptions="Start"/>
                <Label Text="Security Question:" VerticalOptions="Start"/>
                <Button Text="Search the restaurant" Style="{StaticResource buttonStyle}" Clicked="profile_search_button"/>
                <Button x:Name="logout" Style="{StaticResource buttonStyle}" Text="Logout" Clicked="profile_logout_button"></Button>
            </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>